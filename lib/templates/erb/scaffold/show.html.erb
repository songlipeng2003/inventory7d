<div class="page-header">
  <%%= link_to <%= index_helper %>_path, :class => 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    <%%= t('views.back') %>
  <%% end %>
  <%%= link_to edit_<%= singular_table_name %>_path(@<%= singular_table_name %>), :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    <%%= t('views.edit') %>
  <%% end %>
  <h1><%%= t 'views.show_model', :model => t('activerecord.models.<%= singular_table_name %>') %></h1>
</div>

<dl class="dl-horizontal">
  <%- attributes.each do |attribute| -%>
  <dt><%%= t('activerecord.attributes.<%= singular_table_name %>.<%= attribute.name %>') %>:</dt>
  <dd><%%= @<%= singular_table_name %>.<%= attribute.name %> %></dd>

  <%- end -%>
</dl>
