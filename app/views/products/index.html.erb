<div class="page-header">
  <%= link_to new_product_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    <%= t 'views.new_model', :model => t('activerecord.models.product') %>
  <% end %>
  <h1><%= t 'views.list_model', :model => t('activerecord.models.product', :count => 2) %></h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th><%= t('activerecord.attributes.product.sn') %></th>
            <th><%= t('activerecord.attributes.product.name') %></th>
            <th><%= t('activerecord.attributes.product.stock') %></th>
            <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @products) do |product| %>
            <td><%= product.sn %></td>
            <td><%= product.name %></td>
            <td><%= product.stock %></td>
            <td>
          <%= link_to t('views.show'), product %>
          <%= link_to t('views.edit'), edit_product_path(product) %>
          <%= link_to t('views.destroy'), product, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      <% end %>
    </tbody>
  </table>
</div>
