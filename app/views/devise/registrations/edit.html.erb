<h2><%= t 'devise.views.registrations.edit.title' %></h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, :required => true, :autofocus => true %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :password, :autocomplete => "off", :hint => t('devise.views.registrations.edit.change_pass_tip'), :required => false %>
    <%= f.input :password_confirmation, :required => false %>
    <%= f.input :current_password, :hint => t('devise.views.registrations.edit.change_pass_confirm'), :required => true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, t('devise.views.registrations.edit.submit') %>
  </div>
<% end %>

<h3><%= t('devise.views.registrations.edit.cancel_account') %></h3>

<p><%= link_to t('devise.views.registrations.edit.cancel_account_warning'), registration_path(resource_name), :data => { :confirm => t('devise.views.registrations.edit.cancel_account_confirm') }, :method => :delete %></p>
