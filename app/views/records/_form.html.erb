<%= simple_form_for(@record) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :warehouse %>
    <%= f.association :product %>
    <%= f.input :io_type, :collection => Record::IO_TYPES.invert %>
    <%= f.input :act_type, :collection => Record::ACT_TYPES.invert %>
    <%= f.input :number %>
    <%= f.input :note %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
