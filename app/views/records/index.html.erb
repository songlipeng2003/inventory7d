<div class="page-header">
  <%= link_to new_record_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    <%= t 'views.new_model', :model => t('activerecord.models.record') %>
  <% end %>
  <h1><%= t 'views.list_model', :model => t('activerecord.models.record', :count => 2) %></h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th><%= t('activerecord.attributes.record.warehouse') %></th>
            <th><%= t('activerecord.attributes.record.product') %></th>
            <th><%= t('activerecord.attributes.record.io_type') %></th>
            <th><%= t('activerecord.attributes.record.number') %></th>
            <th><%= t('activerecord.attributes.record.act_type') %></th>
            <th><%= t('activerecord.attributes.record.note') %></th>
            <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @records) do |record| %>
            <td><%= record.warehouse %></td>
            <td><%= record.product %></td>
            <td><%= record.io_type %></td>
            <td><%= record.number %></td>
            <td><%= record.act_type %></td>
            <td><%= record.note %></td>
            <td>
          <%= link_to t('views.show'), record %>
          <%= link_to t('views.edit'), edit_record_path(record) %>
          <%= link_to t('views.destroy'), record, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      <% end %>
    </tbody>
  </table>
</div>
